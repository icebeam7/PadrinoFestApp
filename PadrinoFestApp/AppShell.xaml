<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PadrinoFestApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PadrinoFestApp"
    xmlns:views="clr-namespace:PadrinoFestApp.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Eventos"
        ContentTemplate="{DataTemplate views:EventsView}"
        Route="Eventos" />

    <ShellContent
        Title="Speakers"
        ContentTemplate="{DataTemplate views:SpeakersView}"
        Route="Speakers" />
</Shell>
